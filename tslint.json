{
  "extends": [
    "tslint:latest",
    "tslint-react"
  ],
  "rules": {
    "class-name": true,
    "jsdoc-format": true,
    "no-empty": true,
    "no-require-imports": true,
    "no-default-export": true,
    "interface-name": [
      true,
      "always-prefix"
    ],
    "align": [
      true,
      "parameters",
      "arguments",
      "statements"
    ],
    "one-variable-per-declaration": [
      true,
      "ignore-for-loop"
    ],
    "no-unused-variable": [
      true,
      "react"
    ],
    "no-unused-new": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "indent": [
      true,
      "spaces"
    ],
    "no-duplicate-key": true,
    "no-duplicate-variable": true,
    "no-eval": true,
    "no-internal-module": true,
    "no-trailing-whitespace": true,
    "no-unsafe-finally": true,
    "no-var-keyword": true,
    "one-line": [
      true,
      "check-open-brace",
      "check-whitespace"
    ],
    "quotemark": [
      true,
      "double"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ]
  }
}